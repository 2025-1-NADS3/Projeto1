<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog_white"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/txtDialogTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appTituloDialogTituloPonto"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/appColorPreto"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/txtDialogMensagem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appTituloDialogMensagemSeuPonto"
        android:textSize="14sp"
        android:textColor="@color/appColorCinza"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/txtDialogPontos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appMascaraPontos"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/appColorRoxo"
        android:layout_marginBottom="12dp"/>

    <TextView
        android:id="@+id/txtDialogMensagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/appTituloDialogDebitado"
        android:textSize="14sp"
        android:textColor="@color/appColorCinza"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTrocarProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appTituloRedeemPoints"
        android:textColor="@color/appColorBranco"
        android:backgroundTint="@color/appColorRoxo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appBtnCancelar"
        android:textColor="@color/appColorRoxo"
        android:backgroundTint="@color/appColorBranco"
        android:strokeColor="@color/appColorRoxo"
        android:layout_marginTop="8dp" />

</LinearLayout>
